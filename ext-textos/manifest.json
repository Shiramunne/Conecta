{
  "manifest_version": 3,
  "name": "Textos Prontos",
  "version": "1.0.1",
  "description": "Selecione um texto pronto e copie para a área de transferência.",
  "action": {
    "default_title": "Textos Prontos"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}