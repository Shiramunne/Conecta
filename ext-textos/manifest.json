{
  "manifest_version": 3,
  "name": "Textos Prontos Pro",
  "version": "1.1.0",
  "action": {
    "default_title": "Abrir Textos Prontos"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mgconecta.com.br/*",
        "*://*.huggy.app/*"
      ],
      "js": ["content.js"],
      "css": ["floating.css"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}