{
  "manifest_version": 3,
  "name": "Botões Tela de Ticket",
  "version": "1.2",
  "description": "Botões com coleta de dados em segundo plano.",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}